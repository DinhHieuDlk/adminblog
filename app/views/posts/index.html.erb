<%= render "layouts/profile"%>
<div class="col-md-8">
<% @posts.each do |post| %>
  <article>
    <header><h2><%=link_to truncate(post.title, length:100, separator:''), post_path(post) %></h2></header>
    <footer><small><%=time_ago_in_words(post.created_at)%> ago</small></footer>

    <div class="lead">
      <%= truncate(strip_tags(post.content), length:250, separator:''){link_to "Read More", post_path(post)}%>
    </div>
  <% if Setting.tag_visible?%>
    <footer>
      <%post.tags.each do |tag|%>
      <%=link_to posts_path(tag: tag.name) do%>
      <span class="label label-default"><%=tag.name%></span>
      <%end%>
      <%end%>
    </footer>
    <%end%>
    <hr>
  </article>
<% end %>
<nav>
    <nav>
          <%= paginate @posts%>
    </nav>
</div>