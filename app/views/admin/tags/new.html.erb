
 <div class="row">
              <div class="col-md-4 dashboard-left-cell">
                <div class="admin-content-con">
                  <header>
                    <h5>Create tags</h5>
                  </header>
                  
                   <%= render 'form' %>
                 
                </div>
              </div>

              <div class="col-md-8 dashboard-right-cell">
                <div class="admin-content-con">
                  <header>
                    <h5>Tags</h5>
                  </header>

                  <table class="table table-striped table-hover">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                    <%@tags.each do |tag|%>
                      <tr>
                        <td><%=tag.name%></td>
                        <td><span class="label label-success"> <%=status_converter(tag.in_use?, truthy:'in use',falsey:'not in use' )%></span></td>
                        <td><%=time_ago_in_words(tag.created_at)%></td>
                        <td>
                          <button type="button" class="btn btn-xs btn-warning"><%= link_to 'Edit', edit_admin_tag_path(tag) %></button>
                          <%if tag.in_use?%>
                          <button type="button" class="btn btn-xs btn-danger disabled">Delete</button>
                          <%else%>
                          <button type="button" class="btn btn-xs btn-danger"><%= link_to 'Delete',admin_tag_path(tag), method: :delete, data:{confirm:"are you sure?"} %></button>
                          <%end%>
                        </td>
                      </tr>
                      <%end%>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>