<%= form_for [:admin, @setting] do |f| %>
<div class="settings-row">
    <h3>Site name</h3>
    <p>This is permanently shown on the top left corner of navigation</p>
    <div class="form-group">
      <%= f.text_field :site_name, class:"form-control",required:"required",title:""%>
    </div>
  </div>

  <div class="settings-row">
    <h3>Posts per page</h3>
    <p>Control total number of blogs shown on the blog index page.</p>
    <div class="form-group">
    <%= f.number_field :post_per_page, id:"input", class:"form-control small-input", value:"10", required:"required"%>
    </div>
  </div>

  <div class="settings-row">
    <h3>Under maintenance</h3>
    <p>Redirect all requests to a a holding page.</p>
    <div class="checkbox">
      <label>
        <%= f.check_box :under_maintenance%>
        blog is under maintenance
      </label>
    </div>
  </div>

  <div class="settings-row">
    <h3>Prevent commenting</h3>
    <p>Prevent or Enable visitors from leaving comments.</p>
    <%= f.select :prevent_commenting, [['disable', false],['active', true]], id:"input", class:"form-control small-input"%>
  </div>

  <div class="settings-row">
    <h3>Tags visibility</h3>
    <p>Enable or Disable tag visibility on all blog posts.</p>
    <%= f.select :tag_visibility, [['active', true], ['disable', false]], id:"input", class:"form-control small-input"%>
  </div>
  <%=f.submit "Save Settings",class:"btn btn-primary" %>
<% end %>






                    