<!DOCTYPE html>
<html>
<head>
  <title>Adminblog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="<%=root_path%>"><%= Setting.site_name%></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="active"><a href="<%=posts_path%>">Posts <span class="sr-only">(current)</span></a></li>
          <li><a href="<%=about_path%>">About</a></li>
          <li><a href="<%=new_message_path%>">Contact</a></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
  <div class="container">
    <div class="row">
    <%flash.each do |name , msg|%>
    <%=content_tag :div, msg, class:"alert alert-#{name}"%>
  <%end%>
      <div class="col-md-3 col-sm-12 col-xs-12 profile">
        <aside>
          <div class="clearfix">
            <img src="/assets/dh_logo.png" alt="dinhhieu image" class="img-circle profile-image">

            <div class="profile-content">
              <h4>Dinh Hieu</h4>
              <p></p>
              <a class="twitter-follow-button"
                href="https://twitter.com/DinhhieuDlk"
                data-show-count="true"
                data-lang="en">
                Follow @DinhhieuDlk
              </a>
            </div>

            <hr class="hidden-xs hidden-sm">

            <div class="social-icons">
              <p>Share this page:</p>
              <ul class="clearfix">
                <li><img src="/assets/social_icons/twitter.png"></li>
                <li><img src="/assets/social_icons/facebook.png"></li>
                <li><img src="/assets/social_icons/linkedin.png"></li>
                <li><img src="/assets/social_icons/googleplus.png"></li>
                <li><img src="/assets/social_icons/pinterest.png"></li>
                <li><img src="/assets/social_icons/email.png"></li>
              </ul>
            </div>
          </div>

          <hr class="hidden-md hidden-lg">

        </aside>
      </div>
      <div class="col-md-8">
      <%= yield %>
      </div>
    </div>
  </div>
<script>window.twttr=(function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],t=window.twttr||{};if(d.getElementById(id))return;js=d.createElement(s);js.id=id;js.src="https://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);t._e=[];t.ready=function(f){t._e.push(f);};return t;}(document,"script","twitter-wjs"));
</script>
</body>
</html>
