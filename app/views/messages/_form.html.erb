<%= form_for @visitor_message, url: messages_path, action: :create do |f| %>
  
  <form>
    <h3>Send me a message</h3>
    <p>
      <label class="sr-only">Your Name</label>
      <%= f.text_field :fullname, class:"form-control", placeholder:"Your Name"%>
    </p>
   <p>
      <label class="sr-only">Email Address</label>
       <%= f.email_field :email,class:"form-control", placeholder:"Email Address"%>
    </p>
  <%=fields_for :message do |message| %>
    <p>
      <label class="sr-only">Your Message</label>
      <%= message.text_area :content, class:"form-control", placeholder:"Your Message", id:"textarea" %>
    </p>
    <%end%>
    <p><%= f.submit "Send Message", class:"btn btn-primary"%></p>
  </form>
<% end %>
